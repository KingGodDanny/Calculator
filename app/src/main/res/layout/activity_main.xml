<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

        <TextView
            android:id="@+id/edtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:textSize="80px"
            android:gravity="center|right"
            />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="7"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="8"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="9"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/slash"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="/"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="4"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="5"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="6"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/multi"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="*"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/one"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="1"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="2"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="3"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/minus"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="-"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/zero"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="0"
            android:layout_weight="7.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="+"
            android:layout_weight="2.5"
            android:layout_margin="5px"
            android:textSize="50px"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/reset"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="CE"
            android:layout_weight="5"
            android:layout_margin="5px"
            android:textSize="50px"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="0px"
            android:layout_height="250px"
            android:text="="
            android:layout_weight="5"
            android:layout_margin="5px"
            android:textSize="50px"
            />



    </LinearLayout>



</LinearLayout>